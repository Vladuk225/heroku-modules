from .. import loader
import random


@loader.tds
class ChannelsWithModulesMod(loader.Module):
    """Отправляет каналы с модулями для юзер бота"""
    strings = {
        "name": "ChannelsWithModules",
        "help": "Используйте .channelsm, чтобы получить случайный список каналов с модулями для юзер бота."
    }

    async def channelsmcmd(self, message):
        channels = [
            "😶‍🌫️ @hikarimods",
            "😎 @famods",
            "🦋 @morisummermods",
            "💚 @nalinormods",
            "🤩 @AstroModules",
            "⭐️ @shadow_modules",
            "💪 @vsecoder_m",
            "☺️ @mm_mods",
            "😈 @apodiktum_modules",
            "😇 @wilsonmods",
            "👑 @DorotoroMods",
            "✌️ @HikkaFTGmods",
            "🐈‍⬛ @nercymods",
            "🎈 @hikka_mods",
            "😐 @sqlmerr_m",
            "🥰 @AuroraModules",
            "😄 @BHikkaMods",
            "🌟 @BchModules",
            "🥵 @userbotik",
        ]
        random.shuffle(channels)

        await message.edit(
            "🌘 <b>Список каналов с модулями</b>\n\n" + "\n".join(channels) + "\n\nСписок будет ещё расширяться!!!",
            parse_mode="html"
        )
